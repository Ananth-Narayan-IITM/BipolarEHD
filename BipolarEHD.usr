	subroutine userf(ix,iy,iz,eg) ! Set acceleration term
	integer ix,iy,iz,eg
	include 'SIZE'
	include 'TOTAL'
	include 'NEKUSE'
	!--------------------------------------------------------------
	!------------------------Declaration --------------------------
	!--------------------------------------------------------------
	common /ElectricFld/ Ex (lx1,ly1,lz1,lelv),Ey (lx1,ly1,lz1,lelv)
	common /ElectricFld/ Ez(lx1,ly1,lz1,lelv)
	ie = gllel(eg) ! To be present after all declarations
	!--------------------------------------------------------------
	!------------------------Force --------------------------------
	!--------------------------------------------------------------
	ffx = t(ix,iy,iz,ie,3)*Ex(ix,iy,iz,ie)/cpfld(1,2)
	ffy = t(ix,iy,iz,ie,3)*Ey(ix,iy,iz,ie)/cpfld(1,2)
	ffz = t(ix,iy,iz,ie,3)*Ez(ix,iy,iz,ie)/cpfld(1,2)
	!--------------------------------------------------------------
	!------------------------Debugging ----------------------------
	!--------------------------------------------------------------
	return
	end
!----------------------------------------------------------------------------------
!-----------------------------------USERQ -----------------------------------------
!----------------------------------------------------------------------------------
	subroutine userq(ix,iy,iz,eg) ! Sets Source Terms
	integer ix,iy,iz,eg
	include 'SIZE'
	include 'TOTAL'
	include 'NEKUSE' 
	!--------------------------------------------------------------
	!------------------------Declaration --------------------------
	!--------------------------------------------------------------
	common /SrcFld/ srcFld3(lx1,ly1,lz1,lelv)
	common /SrcFld/ srcFld4(lx1,ly1,lz1,lelv)
	common /SrcFld/ srcFld5(lx1,ly1,lz1,lelv)
	common /ElectricFld/ Ex (lx1,ly1,lz1,lelv),Ey (lx1,ly1,lz1,lelv)
	common /ElectricFld/ Ez(lx1,ly1,lz1,lelv), magE(lx1,ly1,lz1,lelv)
	common /PhyConst/ e0, Boltzmann, eps0, n0
	real magE
	ie = gllel(eg) ! To be present after all declarations
	!--------------------------------------------------------------
	!------------------------ Onsager Function --------------------
	!--------------------------------------------------------------
	wE = e0**3*magE(ix,iy,iz,ie)
	wE = (wE/(16*3.141*eps0*uparam(2)*Boltzmann**2*uparam(6)**2))**0.5
	if (wE .eq. 0.0) then
		FwE = 1.0 ! FwE(0) = 1.0- without Onsager enhancement
	else
		call modBessel(I,4*wE)
		FwE = I/(2*wE)
	endif
	tmp = (e0*2*t(ix,iy,iz,ie,5)*n0**2/(eps0*uparam(2)))
	tmp = tmp*(FwE-(t(ix,iy,iz,ie,3)*t(ix,iy,iz,ie,4))/n0**2) ! RHS of Np and Nn species Equation
	!--------------------------------------------------------------
	!------------------------ Source Terms ------------------------
	!--------------------------------------------------------------
	if (ifield .eq. 3) then
		avol = srcFld3(ix,iy,iz,ie)/(eps0*uparam(2)) ! Poission source term
	elseif (ifield .eq. 4) then
		
		avol = srcFld4(ix,iy,iz,ie)+tmp

	endif

	!--------------------------------------------------------------
	!------------------------Debugging ----------------------------
	!--------------------------------------------------------------
	end
